mixin spb(buttonLabel)
  section(class=buttonLabel)
    .wrapper--search
      .wrapper__subwrapper--search 
        if path == 'allbookshelves'
          label.search__bar.search__bar__label Search
          input.search__bar.search__bar__input.search__bar__input--allbookshelves
        if path == 'mybookshelf'
          select.search__bar__option
            option(value='add') Search To Add
            option(value='find') Search To Find
            input.search__bar.search__bar__input.search__bar__input--mybookshelf
        if path == 'request'
          label.search__bar.search__bar__label Search
          input.search__bar.search__bar__input
        button.search__bar.search__bar__submit(type='button') Submit
    .wrapper--preview.is-not-displayed
      .preview__title
        a.preview__link
      .preview__author
      .preview__description
      if buttonLabel
        button.preview__submit(type='button')= buttonLabel
    .wrapper--bookshelf.bookshelf--complete
    .wrapper--query.is-not-displayed
      .query__description 
        span.query__description.query__description__explanatory-string Showing search results for:&nbsp;
        span.query__description.query__description__query-string
      button.query__close(type='button') &#10005;
    .wrapper--bookshelf.bookshelf--query.is-not-displayed
